<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="false"
    android:orientation="vertical"
    android:background="#88ffffff"
    android:transitionGroup="false">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ff5159ce"
        android:layout_height="45dp">

        <ImageView android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Center"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="24sp"/>

    </RelativeLayout>


    <FrameLayout android:id="@+id/sethead"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="35dp"
        android:layout_height="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#bfbfbf"/>

        <com.imageview.makeImageView android:id="@+id/head"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/defalthead" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="30dp"
            android:textSize="14sp"
            android:text="@string/change_avatar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/arrow_right"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="bottom"
            android:background="#bfbfbf"/>

    </FrameLayout>

    <FrameLayout android:id="@+id/nametouch"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#bfbfbf"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:text="@string/nick_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="30dp"
            android:id="@+id/nickname"
            android:textSize="14sp"
            android:text="13530988514" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="bottom"
            android:background="#bfbfbf"
            android:layout_marginLeft="10dp"/>

    </FrameLayout>

    <FrameLayout android:id="@+id/gendertouch"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_gravity="center_vertical|right"
            android:id="@+id/gender"
            android:textSize="14sp"
            android:text="notsure" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="bottom"
            android:background="#bfbfbf"
            android:layout_marginLeft="10dp"/>

    </FrameLayout>

    <FrameLayout
        android:background="#ffffff"
        android:id="@+id/qrtouch"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="#000000"
            android:text="@string/my_qr_code" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical|right"
            android:textSize="14sp"
            android:src="@drawable/scanimg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="bottom"
            android:background="#bfbfbf"
            android:layout_marginLeft="10dp"/>

    </FrameLayout>

    <FrameLayout
        android:background="#ffffff"
        android:id="@+id/infotouch"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text="@string/signatures" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_gravity="center_vertical|right"
            android:id="@+id/userinfo"
            android:textSize="14sp"
            android:text="my world" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="bottom"
            android:background="#bfbfbf"
            android:layout_marginLeft="10dp"/>

    </FrameLayout>

    <FrameLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:text="ID" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical|right"
            android:id="@+id/userID"
            android:textSize="14sp"
            android:text="ID" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="bottom"
            android:background="#bfbfbf"/>

    </FrameLayout>

    <FrameLayout android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#bfbfbf"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:text="@string/change_password"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="bottom"
            android:background="#bfbfbf"/>

        <LinearLayout android:id="@+id/change_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView android:id="@+id/password"
                android:password="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111111111"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_right"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>